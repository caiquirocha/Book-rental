<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.admin.BorrowBookActivity">

    <EditText
        android:id="@+id/adminBorrowTitleEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ListOfBooksTitleFilterHint"/>
    <EditText
        android:id="@+id/adminBorrowEmailEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/AdminReturnBookFilterHint"/>


    <ListView
        android:id="@+id/AdminListOfBorrowedBooksListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>